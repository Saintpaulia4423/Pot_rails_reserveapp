<header>
  <ul class="nav navbar-fixed-top justify-content-end">
    <nav class="navbar text-center">
      <div class="row">
        <li class="nav-item"><%= link_to "ホーム", root_path, class: "nav-link" %></li>
        <% if h_logged_in? %>
          <li class="nav-item">
            <div class="dropdown nav-user">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="navbar-brand">
                  <%= render "layouts/avatar" %>
                </div>
                <%= @current_user.name %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><%= link_to "プロフィール", show_path(@current_user) %></li>
                <li><%= link_to "施設一覧", index_myroom_path(@current_user) %></li>
                <li><%= link_to "施設登録", new_room_path(@current_user) %></li>
                <li><%= link_to "施設検索", index_room_path %></li>
                <li><%= link_to "予約一覧", index_reservation_path(@current_user)%></li>
                <li class="divider"></li>
                <li><%= link_to "ログアウト", logout_path(@current_user), method: :delete, data: { confirm: "ログアウトしますか？"} %></li>
              </ul>
            </div>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to "新規アカウント登録", signup_path, class: "nav-link" %> </li>
          <li class="nav-itme"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
        <% end %>
      </div>
    </ul>
  </nav>
</header>