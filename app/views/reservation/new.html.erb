<% provide(:title, "新規予約") %>
<div class="container">
  <h1>新規予約登録</h1>
  <div class="row">
    <div class="col-md-6">
      <%= form_with url: new_reservation_path, scope: :reservation do |f| %>
        <%= render "layouts/error_messages", object: @reservation %>

        <%= f.label :checkin %>
        <%= f.date_field :checkin, class: "form-control" %>
      
        <%= f.label :checkout %>
        <%= f.date_field :checkout, class: "form-control" %>

        <%= f.label :person %>
        <%= f.text_field :person, class: "form-control" %>

        <%= f.submit "予約登録", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>