<% provide(:title, "プロファイル情報更新") %>
<% provide(:instance, @user) %>
<div class="container">
  <h1>プロファイル編集ページ</h1>
  <div class="row">
    <div class="col-md-6">
      <%= form_with url: edit_profile_path, scope: :user do |f| %>
        <%= render "layouts/error_messages", object: @user %>
      
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :avatar %>
        <div class="avatar-set">
          <%= render "layouts/avatar" %>
        </div>
        <span class="image">
          <%= f.file_field :image %>
        </span>
        <br>
        <%= f.label :appeal %>
        <%= f.text_area :appeal, class: "form-control" %>

        <%= f.submit "アカウント更新", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>